<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/toolbar"/>
    
    <ScrollView
        android:layout_width="match_parent"
		android:layout_height="match_parent">
		
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="192dp"
                android:layout_height="116dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:contentDescription="Logo"
                android:src="@drawable/lexicalogo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvFAQ1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:text="What is this application?"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="25sp"
                    android:textStyle="italic"
                    android:gravity="center_vertical"/>

                <ImageButton
                    android:id="@+id/bTTSwhatIsThisApp"
                    style="@style/btnStyleSeagull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_volume_up_black_24dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvFAQ2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="This app is a rehabilitation app to help people with pure alexia. However, it could potentially be used to also help people with: dyslexia, people learning how to read, and other types of alexia."
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvFAQ3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:text="What does this app include?"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="25sp"
                    android:textStyle="italic"
                    android:gravity="center_vertical"/>

                <ImageButton
                    android:id="@+id/bTTSwhatDoesThisAppInclude"
                    style="@style/btnStyleSeagull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_volume_up_black_24dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvFAQ4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="This app allows you to create a customizable bank of lists of words/letters/phrases called lexica. For sake of simplicity, words/letters/phrases will be referred to as 'items'. You can create and delete lexica, and also create and delete items (a.k.a. words, letters, paragraphs) in each lexicon as well. Think of these banks of items as a personal dictionary to help you or your loved one/patient learn or re-learn their reading ability."
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <!-- screenshot of list of guides activity -->

            <TextView
                android:id="@+id/tvFAQ5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Each of these lists of items can be tested on with built-in exercises/games. There is a kinesthetic test, a limited exposure therapy test, and a MOR (multiple oral re-reading) test. These tests appear in existing academic literature in the rehabilitation of pure alexia."
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvFAQ6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:text="Rehabilitation Exercises and Games"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvFAQ7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="The kinesthetic test makes you trace each word in the list you want to be tested on. Then, you have to say the traced word out loud into the device. Research shows that tracing the letters out could help in being able to read the letter/word."
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvFAQ8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="The limited exposure test, or L.E.T. is a multiple choice style quiz. The word is first spoken out loud by the device to you. For example, the game will say 'cat'. Four buttons will be displayed, all with similar looking words to the word 'cat'. You must choose the correctly spelt word in a limited amount of time."
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvFAQ9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="The last test, MOR, only shows up for passage/paragraph items. It essentially calculates the words per minute you can read that passage/paragraph."
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvFAQ10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Finally, there is a slideshow feature that can automatically can go through a list of items, and display each item for xx amount of seconds before moving onto the next item in that list. Previous pure alexics mentioned this feature is useful and helpful, so we added it in."
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <!-- screenshot of default list of lexica -->

            <TextView
                android:id="@+id/tvFAQ11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:text="Preinstalled Lexica"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvFAQ12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:text="Some lexica are pre-installed with your installation of this app. These include:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvFAQ13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:text="•Homework (a special unremoveable lexicon where you can put other words/letters/paragraphs from other lists into this lexicon with a click of a button)\n•Letters\n•Simple 3-letter words\n•Passages"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
        
    </ScrollView>
</LinearLayout>
