<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<style name="MyTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->
        <item name="android:alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert</item>
    </style>

    <style name="MyActionBar">
        <!--<item name="android:background">#2EADB8</item>-->
        <!--<item name="android:backgroundSplit">#2EADB8</item>-->
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">#fff</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">#fff</item>
        <!-- Used to color the text of the action menu icons -->
        <item name="android:textColorSecondary">#fff</item>
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">#fff</item>
        <!-- Color of the Toolbar -->
        <item name="android:background">#2EADB8</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#24868f</item>
    </style>

    <style name="showcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#F280bfff</item>
        <item name="sv_showcaseColor">#0099ff</item>
        <item name="sv_buttonText">Hide</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/showcaseTitle</item>
        <item name="sv_detailTextAppearance">@style/showcaseText</item>
    </style>

    <style name="btnStyleSeagull" parent="@android:style/Widget.Button">
       <item name="android:textSize">15sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#626954</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/custom_button_seagull</item>
       <item name="android:padding">10dip</item>
   </style>
   
	
	<!-- another seagull button (not the usual one). This style is for special butons -->
	<style name="btnStyleSeagullLight" parent="@android:style/Widget.Button">
       <item name="android:textSize">23sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#626954</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/custom_button_seagull_lighter</item>
       <item name="android:padding">10dip</item>
   </style>
   
	<style name="btnStyleSeagullDark" parent="@android:style/Widget.Button">
       <item name="android:textSize">23sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#626954</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/custom_button_seagull_dark</item>
       <item name="android:padding">10dip</item>
   </style>
</resources>